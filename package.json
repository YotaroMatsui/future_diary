{
  "name": "future-diary",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "bun run --cwd apps/api dev",
    "dev:web": "bun run --cwd apps/web dev",
    "db:migrate": "bun run --cwd packages/db migrate",
    "db:migrate:remote": "bun run --cwd packages/db migrate-remote",
    "vector:reindex": "bun run --cwd apps/jobs vector:reindex",
    "typecheck": "bun run --workspaces --if-present typecheck",
    "build": "bun run --workspaces --if-present build",
    "test": "bun run --workspaces --if-present test",
    "lint": "bun run --workspaces --if-present lint",
    "lint:fix": "bun run --workspaces --if-present lint:fix",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "ci": "bun run lint && bun run test && bun run typecheck && bun run build"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260129.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.0.0",
    "typescript": "^5.7.3",
    "wrangler": "^4.48.0"
  },
  "packageManager": "bun@1.1.45"
}
