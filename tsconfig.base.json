{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@future-diary/core": ["packages/core/src/index.ts"],
      "@future-diary/db": ["packages/db/src/index.ts"],
      "@future-diary/vector": ["packages/vector/src/index.ts"],
      "@future-diary/ui": ["packages/ui/src/index.ts"]
    },
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"]
  }
}
